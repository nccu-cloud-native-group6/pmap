{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "ts-node src/app.ts",
    "serve": "node dist/index.js",
    "build": "rm -rf dist && npx tsc",
    "dev:start": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/app.ts | npx pino-pretty",
    "dev": "docker compose -f ../docker-compose-dev.yml --env-file ../.env.dev up -d --build",
    "dev:stop": "docker compose -f ../docker-compose-dev.yml down",
    "prettier": "npx prettier --write .",
    "prepare": "if [ \"$CUSTOM_ENV\" != \"prod\" ] && [ \"$CUSTOM_ENV\" != \"staging\" ]; then cd .. && husky backend/.husky; fi",
    "migrate": "node --loader ts-node/esm src/Database/migrate/init_db.ts",
    "postmigrate": "node --loader ts-node/esm src/Database/migrate/polygons/init_grid_to_db.ts",
    "prod": "docker compose -f /srv/pmap/docker-compose.yml --env-file .env.production up -d --build",
    "staging": "docker compose -f ../docker-compose-staging.yml --env-file ../.env.staging up -d --build",
    "staging:stop": "docker compose -f ../docker-compose-staging.yml down",
    "api-gen": "npx openapi-typescript ./docs/swagger.yaml -o ./src/Types/api.d.ts --properties-required-by-default"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-ui-express": "^4.1.6",
    "husky": "^9.1.6",
    "nodemon": "^3.1.4",
    "openapi-typescript": "^7.4.4",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@turf/turf": "^7.1.0",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "googleapis": "^144.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "mqtt": "^5.10.3",
    "mysql2": "^3.11.4",
    "node-cron": "^3.0.3",
    "pino": "^9.5.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.6.0"
  }
}
